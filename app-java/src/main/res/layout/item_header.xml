<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textAllCaps="true"
        android:textColor="@color/color_title_header"
        android:textSize="32sp"
        android:textStyle="bold"
        tool:text="Data Engineering from scratch" />

    <TextView
        android:id="@+id/title_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/color_title_summary"
        android:textSize="16sp"
        tool:text="Follow this series from the collaboration of tech gurus to demyth data engineering" />
</LinearLayout>